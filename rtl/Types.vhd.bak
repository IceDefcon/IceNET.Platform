library ieee;
use ieee.std_logic_1164.all;

package Types is

    type UART_LOG_MESSAGE is array (0 to 7) of std_logic_vector(6 downto 0);
    type UART_LOG_DATA is array (0 to 3) of std_logic_vector(6 downto 0);
    type UART_LOG_ID is array (0 to 1) of std_logic_vector(6 downto 0);

    function CONVERT_TO_ASCII(hex_code : std_logic_vector(3 downto 0)) return std_logic_vector(6 downto 0);

    constant ASCII_LF    : std_logic_vector(6 downto 0) := "0001010";
    constant ASCII_CR    : std_logic_vector(6 downto 0) := "0001100";
    constant ASCII_DOT   : std_logic_vector(6 downto 0) := "0101110";
    constant ASCII_SPACE : std_logic_vector(6 downto 0) := "0100000";

end package Types;

package body Types is

    function CONVERT_TO_ASCII(hex_code : std_logic_vector(3 downto 0)) return std_logic_vector(6 downto 0) is
    begin
        case hex_code is
            when "0000" => return "0110000"; -- ASCII '0'
            when "0001" => return "0110001"; -- ASCII '1'
            when "0010" => return "0110010"; -- ASCII '2'
            when "0011" => return "0110011"; -- ASCII '3'
            when "0100" => return "0110100"; -- ASCII '4'
            when "0101" => return "0110101"; -- ASCII '5'
            when "0110" => return "0110110"; -- ASCII '6'
            when "0111" => return "0110111"; -- ASCII '7'
            when "1000" => return "0111000"; -- ASCII '8'
            when "1001" => return "0111001"; -- ASCII '9'
            when "1010" => return "1000001"; -- ASCII 'A'
            when "1011" => return "1000010"; -- ASCII 'B'
            when "1100" => return "1000011"; -- ASCII 'C'
            when "1101" => return "1000100"; -- ASCII 'D'
            when "1110" => return "1000101"; -- ASCII 'E'
            when "1111" => return "1000110"; -- ASCII 'F'
            when others => return "0000000"; -- Default (undefined input)
        end case;
    end function CONVERT_TO_ASCII;

end package body Types;
